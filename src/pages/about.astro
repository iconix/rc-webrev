---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

const pageTitle = "About Me";

const identity = {
  firstName: "Nadja",
  occupation: "Machine Learning Engineer",
};

const occupationColor = "#1d9559";
const fontWeight = "bold";
const textCase = "lowercase";

const atRecurse = true;
const employed = false;
---

<BaseLayout pageTitle={pageTitle}>
	<p>I am a <span class="occupation">{identity.occupation}</span> who also likes to code for the web and aspires to make more computer art.</p>
	{atRecurse && <p>I am currently at the <a href="https://www.recurse.com/">Recurse Center</a>.</p>}
	{employed && <p>Opinions expressed are mine.</p>}
	<style is:global define:vars={{occupationColor, fontWeight, textCase}}>
		.occupation {
			color: var(--occupationColor);
			font-weight: var(--fontWeight);
    		text-transform: var(--textCase);
		}
	</style>
</BaseLayout>
