        font-size: 0.925rem;
    }

    .back-link:hover {
        text-decoration: underline;
    }

    @media (max-width: 640px) {
        .stream-header {
            flex-direction: column;
            gap: 0.5rem;
        }

        .stream-header h1 {
            margin: 0;
        }
    }
</style>
