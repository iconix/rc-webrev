</BaseLayout>

<style is:global>
    /* Hide site navigation and other elements when printing */
    @media print {
        nav, header, footer, .site-header, .site-footer, h1:not(.resume-container h1), .page-title {
            display: none !important;
        }

        @page {
            size: letter;
            margin: 0;
        }

        body {
            margin: 0;
            padding: 0;
            width: 8.5in;
            height: 11in;
            background-color: white;
        }

        main {
            margin: 0 !important;
            padding: 0 !important;
            max-width: none !important;
            width: 100% !important;
        }
    }
</style>

<style>
    /* Layout control styles */
    .screen-only {
        display: block;
    }
    .print-only {
        display: none;
    }

    @media print {
        .screen-only {
            display: none;
        }
        .print-only {
            display: block;
        }
    }

    /* Base styles for screen viewing */
    .resume-container {
        max-width: 8.5in;
        margin: 0 auto;
        padding: 0.2in;
        position: relative;
        border-left: 5px solid #10616E;
        font-size: 9.5pt;
        line-height: 1.25;
    }

    .header {
        text-align: center;
        margin-bottom: 6px;
        padding-bottom: 6px;
        border-bottom: 1px solid #eaeaea;
    }

    .header h1 {
        margin: 0 0 2px 0;
        color: #10616E;
        font-size: 18pt;
        letter-spacing: -0.5px;
    }

    .header h2 {
        margin: 0 0 4px 0;
        font-weight: normal;
        font-size: 10pt;
        color: #555;
    }

    .separator {
        margin: 0 6px;
        color: #999;
    }

    .contact-info {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-bottom: 6px;
        flex-wrap: wrap;
        font-size: 8pt;
    }

    .contact-info a {
        color: #2B8396;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        padding: 0.125rem 0.375rem;
        border-radius: 3px;
    }

    .section {
        margin-bottom: 6px;
        padding-left: 2px;
    }

    .section-title {
        font-size: 12pt;
        color: #10616E;
        border-bottom: 1px solid #10616E;
        padding-bottom: 2px;
        margin: 0 0 4px 0;
    }

    .two-column {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin-bottom: 6px;
    }

    .experience {
        margin-bottom: 6px;
        padding: 3px 5px;
        border-left: 2px solid #eaeaea;
    }

    .experience-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1px;
        flex-wrap: nowrap;
    }

    .experience-subheader {
        display: flex;
        justify-content: space-between;
        font-style: italic;
        margin-bottom: 2px;
        font-size: 8.5pt;
        color: #555;
        flex-wrap: nowrap;
    }

    ul {
        padding-left: 12px;
        margin: 0.5px 0;
    }

    ul ul {
        margin-top: 0.5px;
    }

    li {
        margin-bottom: 0.5px;
        position: relative;
        line-height: 1.2;
    }

    .highlight {
        /* background-color: #E6F4F7; */
        padding: 0 0.125rem;
    }

    /* Print-specific styles */
    @media print {
        .resume-container {
            padding: 0.2in;
            max-width: none;
            width: 100%;
            box-sizing: border-box;
            height: 100%;
            box-shadow: none;
            border-left: none;
            margin: 0;
        }

        .header {
            margin-bottom: 6px;
        }

        .section {
            margin-bottom: 6px;
        }

        .experience {
            margin-bottom: 6px;
            page-break-inside: avoid;
        }

        .two-column {
            gap: 12px;
        }

        a[href]:after {
            content: none !important;
        }

        /* Ensure no page breaks within elements */
        .experience, .section {
            page-break-inside: avoid;
        }
    }

    /* Mobile styles */
    @media screen and (max-width: 768px) {
        .two-column {
            grid-template-columns: 1fr;
        }

        .resume-container {
            padding: 0.5rem;
            font-size: 10pt;
        }

        .header h1 {
            font-size: 16pt;
        }

        .header h2 {
            font-size: 11pt;
        }

        .section-title {
            font-size: 13pt;
        }
    }

    /* Add print note styles */
    .print-note {
        text-align: center;
        color: #666;
        font-size: 0.9rem;
        font-style: italic;
        margin-bottom: 1rem;
    }

    @media print {
        .print-note {
            display: none;
        }
    }
</style>

