---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title} currentSection='blog'>
    <div class='post-meta'>
        <p><em>{frontmatter.pubDate.toString().toLowerCase().slice(0,10)}</em></p>
        <p><em>{frontmatter.description.toLowerCase()}</em></p>
    </div>

    {frontmatter.image && <img src={frontmatter.image.url} width='300' alt={frontmatter.image.alt} />}

    <slot />

    <div class='tags'>
        {frontmatter.tags.map((tag: string) => (
            <p class='tag'><a href={`/tags/${tag}`}>{tag}</a></p>
        ))}
    </div>
</BaseLayout>

<style>
    .post-meta {
        margin-top: 0;
        padding-bottom: 0.5em;
    }

    .post-meta p {
        margin: 0;
    }

    :global(main) {
        margin-top: 0.5em;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--secondary-bg);
    }

    .tag {
        margin: 0;
    }

    .tag a {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
        color: var(--secondary-text);
        background: var(--secondary-bg);
        border-radius: 999px;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .tag a:hover {
        background: var(--hover-bg);
        color: var(--primary-text);
        text-decoration: none;
    }

    .dark .tags {
        border-top-color: var(--dark-secondary-bg);
    }

    .dark .tag a {
        background: var(--dark-secondary-bg);
        color: var(--dark-secondary-text);
    }

    .dark .tag a:hover {
        background: var(--dark-hover-bg);
        color: var(--dark-primary-text);
    }
</style>
