---
import { formatDate } from '../../utils/params.ts';

const { title, url, pubDate } = Astro.props

const formattedDate = formatDate(pubDate);
---
<li><time>{formattedDate}</time><a href={url}>{title}</a></li>

<style>
    .blog-t {
        color: var(--secondary-text);
    }

    a {
        text-decoration: none;
    }

    li {
        position: relative;
        line-height: 1.5;
        margin-bottom: 0.5em;
        display: flex;              /* add flex to handle link + timestamp */
        align-items: baseline;      /* align text nicely */
        gap: 0.5em;                 /* space between link and timestamp */
    }

    /* custom bullet points */
    li::before {
        content: '';
        position: absolute;
        left: -1.5rem;
        top: 0.6em;
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background-color: var(--secondary-text);
    }

    li a {
        color: var(--accent-color);
        text-decoration: none;
        transition: all 0.2s ease;
    }

    li a:hover {
        text-decoration: underline;
        opacity: 0.8;
    }

    /* timestamp styling */
    li time {
        color: var(--secondary-text);
        font-size: 0.875em;   /* slightly smaller than the link */
        white-space: nowrap;  /* keep timestamp on one line */
        flex-shrink: 0;       /* prevent timestamp from shrinking */
        min-width: 5.5em;     /* ensure consistent width for timestamps */
    }

    .dark li::before {
        background-color: var(--dark-secondary-text);
    }

    .dark li time {
        color: var(--dark-secondary-text);
    }

    /* nested lists */
    ul {
        margin: 0.5em 0;       /* less margin for nested lists */
    }
</style>
