---
const { title, url, pubDate } = Astro.props

// TODO: share with Update.astro
function formatDate(date: Date) {
    return new Intl.DateTimeFormat('en-US', {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit',
    }).format(date);
}

const formattedDate = formatDate(pubDate);
---
<li><a href={url}><time>{formattedDate}</time> {title}</a></li>

<style>
    .blog-t {
        color: var(--secondary-text);
    }

    a {
        text-decoration: none;
    }
</style>
